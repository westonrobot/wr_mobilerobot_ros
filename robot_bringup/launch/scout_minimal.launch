<launch>

    <arg name="port_name" value="can1" />
    <arg name="simulated_robot" value="false" />
    <arg name="model_xacro" default="$(find robot_description)/urdf/scout_v2.xacro" />
    <arg name="odom_topic_name" default="odom" />

    <include file="$(find robot_base)/launch/scout_base.launch">
        <arg name="port_name" default="$(arg port_name)" />
        <arg name="simulated_robot" default="$(arg simulated_robot)" />
        <arg name="odom_topic_name" default="$(arg odom_topic_name)" />
    </include>

    <include file="$(find robot_description)/launch/scout_v2_description.launch">
        <arg name="model_xacro" default="$(arg model_xacro)" />
    </include>

</launch>